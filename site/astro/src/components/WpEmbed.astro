---
interface Props {
  url: string;
  title?: string;
}

const { url, title } = Astro.props;

// Simple hostname extraction for display
const domain = new URL(url).hostname;
---

<div class="wp-embed-card">
  <a href={url} class="wp-embed-link" target="_blank" rel="noopener noreferrer">
    <span class="wp-embed-title">{title || url}</span>
    <span class="wp-embed-meta">{domain}</span>
  </a>
</div>

<style>
  .wp-embed-card {
    border: 1px solid #333;
    border-radius: 6px;
    margin: 1.5rem 0;
    background: #111;
    transition: transform 0.2s, border-color 0.2s;
  }

  .wp-embed-card:hover {
    border-color: var(--color-primary, #00d4ff);
    transform: translateY(-2px);
  }

  .wp-embed-link {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    color: inherit;
    text-decoration: none;
  }

  .wp-embed-title {
    font-weight: bold;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: #fff;
  }

  .wp-embed-meta {
    font-size: 0.8rem;
    color: #888;
    text-transform: uppercase;
  }
</style>
