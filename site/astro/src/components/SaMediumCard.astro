---
import type { CollectionEntry } from 'astro:content';
import PostMeta from './PostMeta.astro';

interface Props {
  post: CollectionEntry<'sa-medium'>;
}

const { post } = Astro.props;
const { title, date, description, author, image } = post.data;
const slug = post.data.slug || post.slug || post.id.replace(/\.mdx?$/, '');
const url = `/sa-medium/${slug}/`;
---

<article class="post-card">
  {image && (
    <div class="image-container">
      <a href={url}>
        <img src={image} alt={title} loading="lazy" />
      </a>
    </div>
  )}
  <div class="content">
    <div class="meta-wrapper">
      <PostMeta date={date} author={author} />
    </div>
    <h3><a href={url}>{title}</a></h3>
    {description && <p class="description">{description}</p>}
  </div>
</article>

<style>
  .post-card {
    background: #0f1219;
    border: 1px solid rgba(0, 210, 255, 0.2);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    height: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.7);
    position: relative;
  }

  .post-card:hover {
    transform: translateY(-6px) scale(1.02);
    border-color: rgba(0, 210, 255, 0.8);
    box-shadow: 0 10px 40px rgba(0, 100, 255, 0.2), 0 0 15px rgba(0, 210, 255, 0.3);
    z-index: 10;
  }

  .post-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 0;
    border-top: 2px solid transparent;
    border-left: 2px solid transparent;
    transition: all 0.3s ease;
    z-index: 20;
  }

  .post-card:hover::before {
    width: 30px;
    height: 30px;
    border-top-color: #00d2ff;
    border-left-color: #00d2ff;
  }

  .image-container {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    position: relative;
    border-bottom: 1px solid rgba(0, 210, 255, 0.1);
    background: #050505;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
    display: block;
  }

  .post-card:hover .image-container img {
    transform: scale(1.1);
  }

  .content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    background: linear-gradient(180deg, rgba(15,18,25,0) 0%, rgba(5,8,12,0.5) 100%);
  }

  .meta-wrapper {
    margin-bottom: 0.75rem;
    font-size: 0.75rem;
    color: #00d2ff;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: var(--font-mono, monospace);
    opacity: 0.8;
  }

  h3 {
    margin: 0 0 1rem;
    font-size: 1.5rem;
    line-height: 1.2;
    font-weight: 700;
  }

  h3 a {
    color: #e0e0e0;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-card:hover h3 a {
    color: #fff;
    text-shadow: 0 0 8px rgba(0, 210, 255, 0.5);
  }

  .description {
    color: #a0aab8;
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
