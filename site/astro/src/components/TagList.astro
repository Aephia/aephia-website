---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="tags">
  {tags.map((tag) => (
    <span class="tag">#{tag}</span>
  ))}
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--color-primary);
    background: rgba(0, 212, 255, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
  }
</style>
